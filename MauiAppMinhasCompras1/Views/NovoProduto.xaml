<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras1.Views.NovoProduto"
             Title="Novo Produto">

    <!-- Inserção do botão de salvar -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <!-- Inserção dos campos de descrição, quantidade e preço -->
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Descrição do Produto" />
        <Entry x:Name="txt_descricao"></Entry>

            <Label Text="Categoria do Produto" />
            <Entry x:Name="txt_categoria"></Entry>

            <Label Text="Quantidade" />
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"></Entry>

        <Label Text="Preço unitário" />
        <Entry x:Name="txt_preco" Keyboard="Numeric"></Entry>
    </VerticalStackLayout>
</ContentPage>